<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@android:color/white"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Select an Option"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:typeface="serif"
        android:textSize="@dimen/abc_text_size_title_material" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upload"
        android:id="@+id/button_upload"
        android:layout_above="@+id/button_download"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="42dp"
        android:onClick="uploadButtonPressed"
        android:typeface="serif" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Download"
        android:id="@+id/button_download"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:onClick="downloadButtonPressed"
        android:typeface="serif" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Local File List"
        android:id="@+id/button_local_file_list"
        android:layout_marginTop="75dp"
        android:onClick="showLocalFileListButtonPressed"
        android:typeface="serif"
        android:layout_below="@+id/button_download"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cloud File List"
        android:id="@+id/button_cloud_file_list"
        android:onClick="showCloudFileListButtonPressed"
        android:typeface="serif"
        android:layout_alignTop="@+id/button_local_file_list"
        android:layout_toRightOf="@+id/button_local_file_list"
        android:layout_toEndOf="@+id/button_local_file_list"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"/>

</RelativeLayout>
