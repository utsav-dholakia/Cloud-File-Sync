<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:id="@+id/parent_download"
    android:background="@android:color/white"
    tools:context="com.utd.utsavdholakia.cloudfilesync.DownloadActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="See File List"
        android:id="@+id/button_see_file_list"
        android:layout_marginTop="53dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:onClick="showCloudFilesButtonPressed"
        android:typeface="serif" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText_selected_file_name"
        android:layout_marginTop="74dp"
        android:layout_below="@+id/button_see_file_list"
        android:layout_centerHorizontal="true"
        android:editable="true"
        android:hint="Selected File Name"
        android:typeface="serif" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Download"
        android:id="@+id/button_download"
        android:layout_marginTop="73dp"
        android:layout_below="@+id/editText_selected_file_name"
        android:layout_alignRight="@+id/button_see_file_list"
        android:layout_alignEnd="@+id/button_see_file_list"
        android:onClick="downloadFileButtonPressed"
        android:typeface="serif" />
</RelativeLayout>
